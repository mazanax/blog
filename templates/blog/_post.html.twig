{% apply spaceless %}
    <article class="blog-post">
        <header>
            <h1 class="title">
                {% if with_link %}
                    <a href="{{ path('blog_post', {'id': post.id, 'url': post.url}) }}">{{ post.title }}</a>
                {% else %}
                    {{ post.title }}
                {% endif %}
            </h1>

            <section class="details">
                {% if post.tags is not empty %}
                    <span class="img-tags"></span>

                    <ul class="tags">
                        {% for tag in post.tags %}
                            <li>{{ tag }}</li>
                        {% endfor %}
                    </ul>
                {% endif %}

                <time datetime="{{ post.published_at|date('Y-m-d H:i:00') }}">{{ post.published_at|date('M j, Y h:i A') }}</time>
            </section>
        </header>

        <section class="text">{{ text|raw }}</section>

        {% if with_share_buttons %}
            {% include 'blog/_social_links.html.twig' %}
        {% endif %}
    </article>
{% endapply %}