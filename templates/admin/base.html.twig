<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Admin panel{% endblock %}</title>
    {{ encore_entry_link_tags('admin') }}
    {% block stylesheets %}{% endblock %}
</head>
<body>
<div class="ui large inverted attached menu top-menu">
    <a href="{{ path('admin_index') }}" class="header item">Admin panel</a>
    <div class="right menu">
        <span class="item">{{ app.user.username }}</span>
        <a href="{{ path('admin_logout') }}" class="item">Logout</a>
    </div>
</div>

<section class="wrapper">
    <div class="ui grid">
        <div class="four wide column">
            <div class="fixed-menu" id="main-menu">
                <div class="menu-title">
                    <a href="{{ path('admin_index') }}" class="ui header">Admin Panel</a>
                </div>
                <div class="ui fluid vertical secondary pointing menu js-sidebar">
                    <a href="{{ path('admin_index') }}" class="item">
                        Dashboard
                    </a>
                </div>
                <div class="ui fluid vertical secondary pointing menu js-sidebar">
                    <a href="{{ path('admin_pages') }}" class="item">
                        Static pages
                    </a>
                    <a href="{{ path('admin_menu') }}" class="item">
                        Site menu
                    </a>
                </div>
                <div class="ui fluid vertical secondary pointing menu js-sidebar">
                    <a href="{{ path('admin_posts') }}" class="item">
                        Published Posts
                    </a>
                    <a href="{{ path('admin_posts_strategy', {'strategy': 'scheduled'}) }}" class="item">
                        Scheduled Posts
                    </a>
                </div>

                {{ calendar() }}
            </div>
        </div>
        <div class="twelve wide column">
            {% block segment %}
                <div class="ui segment">
                    {% block body %}{% endblock %}
                </div>
            {% endblock %}
        </div>
    </div>
</section>

<div class="ui segment" id="loader" style="display: none;">
    <div class="ui active dimmer">
        <div class="ui massive text loader">Loading</div>
    </div>
</div>

{{ encore_entry_script_tags('admin') }}
{% block javascripts %}{% endblock %}
</body>
</html>